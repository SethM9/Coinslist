<% include ../partials/header %>
<div class="container">
<div class="row">
    <div class=" col-md-4">
        <div class="thumbnail">
            <h1><%= user.username %></h1>
            <img src="<%= user.avatar %>" alt="user profile image">
            <div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
        </div> 
        <div>
            About me goes here
        </div>
    </div>
    <div class="col-md-8">
        <h3><%= user.username %>'s active listings</h3>
        <ul>
            <h4>Bitcoin</h4>
        <% btcListings.forEach(function(btcListing){ %>
            <li><a href="/listings/btc/<%= btcListing.id %>"><%= btcListing.title %></a></li>
        <% }); %>
        </ul>
    </div>
</div>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>
<head>
    <link rel="stylesheet" href="/stylesheets/Show.css">
</head>

<div class="container">
<div class="col-md-9" style="margin-left: 125px;">
    <div class="thumbnail">
        <div class="caption-full">
            <h4 class="pull-right">$
                <%= ltcListing.price %>
            </h4>
            <h5>Limit: <%= ltcListing.amount %>LTC</h5>
            <h3>
                <a>
                    <%= ltcListing.title %>
                </a>
            </h3>
            <p>
                <%= ltcListing.description %>
            </p>
            <p><em>Submitted by: <a href="/users/<%= ltcListing.author.id %>"><%= ltcListing.author.username %></a></em></p>
            <% if(currentUser && ltcListing.author.id.equals(currentUser._id)){ %>
                <a class="btn btn-warning" href="/listings/ltc/<%= ltcListing._id %>/edit">Edit</a>
                <form id="delete-form" action="/listings/ltc/<%= ltcListing._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
                </form>
                <% } %>
        </div>
    </div>  
</div>
</div>

<% include ../partials/footer %>
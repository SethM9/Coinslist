<% include ../partials/header %>

<head>
	<link rel="stylesheet" href="/stylesheets/loginreg.css">
</head>

<div class="container">
    <div class="jumbotron">
        <h1 id="heading">Coinslist</h1>
        <br>
        <h3 class="heading">Create a new Ripple listing</h3>
    </div>
</div>

<div>
    <div class="row">
        <div style="width: 30%; margin: 30px auto;">
            <form action="/listings/xrp" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price Per Ripple" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="amount" placeholder="Amount of XRP to trade" min="0.00001" step="0.0000001">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div id="payment" class="form-group">
                        <select name="payment" id="payment">
                            <option value="ETH">Ethereum</option>
                            <option value="LTC">Litecoin</option>
                            <option value="BTC">Bitcoin</option>
                        </select>
                    </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/listings/xrp">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>